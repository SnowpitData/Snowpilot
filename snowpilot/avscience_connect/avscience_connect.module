function  avscience_xml_link($url, $name)  {
	$query_array = array();
	//unset($_GET['q']);
	//unset($_GET['page']);
	
		foreach ($_GET as $key => $var ){
		  if ( is_array($var)){ 
				
				foreach( $var as $ind_region){
					$query_array[] = $key.'[]='.$ind_region;
				}
			}elseif ( $key <> 'q' && $key <> 'page'){
			  $query_array[] = $key.'='. $var ;
      }
