function snowpilot_pit_xml_doc($array_of_nids){
	$data ='';
	foreach ( $array_of_nids as $nid){
		$node = node_load($nid);
		$data .= substr(snowpilot_node_write_pitxml($node), 39);
	}
  return '<?xml version="1.0" encoding="UTF-8"?>
<Pit_Data>
'.$data.'
</Pit_Data>';

}

