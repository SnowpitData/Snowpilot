function snowpilot_xml_link($form_state_values){
	$return_array = array();
	foreach( $form_state_values as $key => $value ){
		if ( !in_array( $key, array( 'xml_feed', 'form_token', 'form_id', 'submit', 'op', 'form_build_id')  ) ){
		  $return_array[$key] = $value;			
		}
	}
	return $return_array;
